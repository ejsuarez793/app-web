{{logged-header-component currentName=currentName }}
 <div class="container-fluid">
        <div class="row">
        
          <div class="col-lg-2  ">
            <h2>Proyectos</h2>
          </div>

          <div class="col-lg-3 ">
            <h2>
              <div class="input-group">
                 {{input name="filtro" id="filtro" type="text" class="form-control" placeholder="Filtrar proyecto" value=filtro}}
                  <span class="input-group-btn">
                    <button class="btn btn-primary" type="button"><span class="glyphicon glyphicon-search"></span></button>
                  </span>
              </div>
            </h2>
          </div>

          <div class="col-lg-2 ">
            <h2>
              <div class="input-group" aria-describedby="basic-addon2">
                <select class="form-control" name="page" id="page">
                  <option value="1">1</option>
                  <option value="10">10</option>
                  <option value="25">25</option>
                  <option value="50">50</option>
                  <option value="100">100</option>
                </select>   
                <span class="input-group-addon" id="basic-addon2">Tam. Pag.</span>
              </div>
            </h2>
          </div>


          <div class="col-lg-3 ">
            <h2>
              <div class="input-group">
                 {{input name="reporteini" id="reporteini" type="text" class="form-control" placeholder="Llenar reporte" value=reporteini}}
                  <span class="input-group-btn">
                    <button class="btn btn-primary" type="button"{{action 'llenarRI'}}><span class="glyphicon glyphicon-search"></span></button>
                  </span>
              </div>
            </h2>
          </div>

        </div>


<div class="row ">
	{{coordinador-sidebar-component}}
	<div class="col-md-10">
		   <table class="table table-bordered table-hover " id="tabla">	
        	<thead class="header-tabla">
        		<tr>
				    <th {{action "ordenarPor" "codigo"}}>Codigo <span id="th-codigo" class="glyphicon glyphicon-chevron-down"></span></th>
				    <th {{action "ordenarPor" "nombre"}}>Nombre <span id="th-nombre" class="glyphicon glyphicon-chevron-down"></span></th>
				    <th{{action "ordenarPor" "nombre_c"}} >Cliente <span id="th-nombre_c" class="glyphicon glyphicon-chevron-down"></span></th>
				    <th{{action "ordenarPor" "estatus"}} >Estado<span id="th-estatus" class="glyphicon glyphicon-chevron-down"></span></th>
				    <th>Rep. Inicial</th>
				    <th>Detalles</th>
  				</tr>
  			</thead>
  			<tbody id="tbody" class="text-center">
  			{{#each filter as |proyecto|}}
  				<tr>
					<td class="col-tabla">{{proyecto.codigo}}</td>
					<td class="col-tabla"><{{proyecto.nombre}}</td>
					<td class="col-tabla">{{proyecto.nombre_c}}</td>
					<td class="col-tabla">{{proyecto.estatus}}</td>
          <td class="col-tabla">{{#if proyecto.codigo_ri}}Reporte{{else}}No Disponible{{/if}}</td>
					<td class="col-tabla"><button {{action 'openModal' 'true' proyecto}} class="btn btn-default btn-xs">editar</button></td>
				</tr>
			{{/each}}
 			</tbody>
		</table>
    <div class="text-center">
     <ul id="pagination" class="pagination-sm"></ul>
     </div>
	</div>
</div>

</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Registrar Servicio</h4>
        <small class="form-text text-muted">* Campos requeridos</small>
      </div>
      <div class="modal-body">
       		
      	<form  id="formulario">
      		<div class="row">
      			<div class="col-md-6">
					<div class="form-group">
						<label>Codigo</label><small class="form-text text-muted">* </small>
						<div class="input-group">
						  {{input name="codigo" id="codigo" type="text" class="form-control" placeholder="Codigo servicio" value=servicio.codigo}}
						  <span class="input-group-addon">{{fa-icon "user"}}</span>
						</div>

					</div>
				</div>

				<div class="col-md-6">
				<div class="form-group">
					<label>Precio Actual</label><small class="form-text text-muted">* </small>
					<div class="input-group input-group">
					  {{input name="precio_act" type="text" class="form-control" placeholder="Precio actual del servicio" value=servicio.precio_act}}
					  <span class="input-group-addon">{{fa-icon "money"}}</span>
					</div>
				</div>
				</div>

				<div class="col-md-12">
				<div class="form-group">
					<label>Descripción</label><small class="form-text text-muted">* </small>
					<div class="input-group input-group">
					  {{bs-textarea  name="desc" type="text" class="form-control" placeholder="Descripción del servicio" value=servicio.desc}}
					  <span class="input-group-addon">{{fa-icon "info"}}</span>
					</div>
				</div>
				</div>		
			</div>
		</form>
      </div>
      <div class="modal-footer">   
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <button type="submit" id="submit-button" {{action 'save'}} class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>