	<div class="col-md-10">

  <table class="table table-bordered table-hover" id="solicitudes">  
          <thead class="header-tabla">
            <tr>
            <th class="tg-yw4l">Código</th>
            <th class="tg-yw4l">Cliente</th>
            <th class="tg-yw4l">Descripción</th>
            <th class="tg-yw4l">Ubicación</th>
            <th class="tg-yw4l">Estatus</th>
            <th class="tg-yw4l">Contacto</th>
