            <th class="tg-yw4l">Referencia</th>
            <th class="tg-yw4l">Editar</th>
          </tr>
        </thead>
        <tbody id="tbody" class="text-center">
        {{#each clientes as |cliente|}}
          <tr>
          <td><{{cliente.rif}}</td>
          <td><{{cliente.nombre}}</td>
          <td><{{cliente.tlf1}} <br> {{cliente.tlf2}} </td>
          <td><{{cliente.fax}}</td>
          <td><{{cliente.dire}}</td>
          <td><{{cliente.act_eco}}</td>
          <td>{{format-atrib 'cond_contrib' cliente.cond_contrib}}</td>
          <td><button {{action 'openModal' 'true' cliente}} class="btn btn-default btn-xs">editar</button></td>
        </tr>
      {{/each}}
      </tbody>
    </table>

	</div>
</div>


