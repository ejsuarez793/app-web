{{logged-header-component currentName=currentName }}
 <div class="container-fluid">
        <div class="row">
        
          <div class="col-lg-2  ">
            <h2>Administración</h2>
          </div>
          <div class="col-lg-10">
            <div id="alertMsg" class="alert alert-dismissible" role="alert" hidden >
              <button type="button" class="close" aria-label="Close" {{action 'cerrarMsg'}}><span aria-hidden="true">&times;</span></button>
              <strong>{{msg.tipo}}</strong> {{msg.desc}}
            </div>
          </div>
        </div>


<div class="row ">
	{{admin-sidebar-component}}
	<div class="col-md-10">

      <div class="well jumbo-color">

        <div class="row">

          	<div class="col-md-12 ">
            	<div class="panel panel-default">
	                <div class="panel-heading">
	                  <h3 class="panel-title">Registro de Usuario</h3>
	                </div>
                	<div class="panel-body">
                		<form  id="formulario">
				      		<div class="row">
				      			<div class="col-md-6">
									<div class="form-group">
										<label>Usuario </label><small class="form-text text-muted">* </small>
										<div class="input-group">
										  {{input name="usuario" id="usuario" type="text" class="form-control" placeholder="Usuario" value=registro.usuario}}
										  <span class="input-group-addon">{{fa-icon "user"}}</span>
										</div>

									</div>
								</div>

								<div class="col-md-6">
									<div class="form-group">
										<label>Cédula </label><small class="form-text text-muted">* </small>
										<div class="input-group">
										  {{input name="ci" id="ci" type="text" class="form-control" placeholder="Cédula" value=registro.ci}}
										  <span class="input-group-addon">{{fa-icon "user"}}</span>
										</div>

									</div>
								</div>

								<div class="col-md-12"></div>

								<div class="col-md-6">
								<div class="form-group">
									<label>Primer Nombre</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input name="nombre1" type="text" class="form-control" placeholder="Primer Nombre" value=registro.nombre1}}
									  <span class="input-group-addon">{{fa-icon "user"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-6">
								<div class="form-group">
									<label>Segundo Nombre</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input name="nombre2" type="text" class="form-control" placeholder="Segundo Nombre" value=registro.nombre2}}
									  <span class="input-group-addon">{{fa-icon "user"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-12"></div>

								<div class="col-md-6">
								<div class="form-group">
									<label>Primer Apellido</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input name="apellido1" type="text" class="form-control" placeholder="Primer Apellido" value=registro.apellido1}}
									  <span class="input-group-addon">{{fa-icon "user"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-6">
								<div class="form-group">
									<label>Segundo Apellido</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input name="apellido2" type="text" class="form-control" placeholder="Segundo Apellido" value=registro.apellido2}}
									  <span class="input-group-addon">{{fa-icon "user"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-12"></div>

								<div class="col-md-4">
								<div class="form-group">
									<label>Teléfono</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input name="tlf" type="tel" class="form-control" placeholder="Teléfono" value=registro.tlf}}
									  <span class="input-group-addon">{{fa-icon "phone"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-4">
								<div class="form-group">
									<label>Correo</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input name="correo" type="email" class="form-control" placeholder="Correo" value=registro.correo}}
									  <span class="input-group-addon">{{fa-icon "envelope"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-4">
								<div class="form-group">
									<label>Cargo</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  <select class="form-control" name="cargo" id="selectcargo">
									  	<option disabled selected value="">Seleccione...</option>
									      <option value="a">Almacenista</option>
									      <option value="c">Coordinador de Proyectos</option>
									      <option value="t">Técnico</option>
									      <option value="v">Vendedor</option>
									    </select>
									  <span class="input-group-addon">{{fa-icon "user"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-12"></div>

								<div class="col-md-12">
								<div class="form-group">
									<label>Dirección</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input name="dire" type="text" class="form-control" placeholder="Dirección" value=registro.dire}}
									  <span class="input-group-addon">{{fa-icon "map-marker"}}</span>
									</div>
								</div>
								</div>

								<div class="col-md-12"></div>

								<div class="col-md-6">
								<div class="form-group">
									<label>Contraseña</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group">
									  {{input id="password1" name="password1" type="password" class="form-control" placeholder="Contraseña" value=registro.password1 }}
									  <span class="input-group-addon">{{fa-icon "lock"}}</span>
									</div>

								</div>
								</div>

								<div class="col-md-6">
								<div class="form-group">
									<label>Repita Contraseña</label><small class="form-text text-muted">* </small>
									<div class="input-group input-group-">
									  {{input name="password2" type="password" class="form-control" placeholder="Contraseña" value=registro.password2}}
									  <span class="input-group-addon">{{fa-icon "lock"}}</span>
									</div>

								</div>
								</div>

								<div class="col-md-12"></div>
							</div>
						</form>
                	</div>
	                <div class="panel-footer">
	                 	<div class="row">
	                		<div class="col-md-12">
	                			<button class="btn btn-primary pull-right" type="submit" {{action 'registrar'}}>Registrar</button>
	                		</div>
	                	</div>
	                </div>
              	</div>
            </div>

          </div>

        </div>
	</div>
</div>

</div>